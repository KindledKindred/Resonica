@import 'animation/_top-animation'

body
	background #181818 !important
	overflow-x hidden
	font-family 'Montserrat' !important
	-ms-overflow-style none
	&::-webkit-scrollbar
		display none

.wrapper
	box-sizing border-box
	height 100vh
	display flex
	padding 5%
	background-attachment fixed
	background-position center
	background-size cover
	background-repeat no-repeat

.parallax
	height 100vh
	background-attachment fixed
	background-position center
	background-size cover
	background-repeat no-repeat

#lab
	background-image url(https://picsum.photos/1920/1080?image=1049)

#amusement-park
	background-image url(https://picsum.photos/1920/1080?image=1015)

#lake
	background-image url(https://picsum.photos/1920/1080?image=1019)
