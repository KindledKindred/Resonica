canvas{
  background: none;
  position: absolute;
  height: 100vh;
  top: 0;
  left: 0;
}

.plate{
  position: absolute;
  bottom: 10vh;
  left: 0;
  width: 100%;
  padding: 1rem 0;
  text-align: center;
  color: white;
  letter-spacing: 4px;
  font-size: 0.6em;
  line-height: 2.5;
}

.mouse{
  position: absolute;
  top: 0;
  left: 0;
  text-align: center;
  padding: 1rem 0;
  z-index: 2;
  color: rgba(255,255,255,0.3);
  width: 100%;
  letter-spacing: 6px;
  font-size: 0.45em;
  line-height: 2.5;
  text-transform: uppercase;
  transition: all 0.5s ease;
  opacity: 0;
  transform: translateY(-15px);
  &.active{
    transform: none;
    opacity: 1;
  }
}

.text-animation{
  opacity: 0;
  &.active{
    opacity: 1;
  }
  .letter{
    opacity: 0;
    transition: color 0.5s ease, opacity 0.3s ease;
    transform-origin: bottom;
    color: white;
    &.active{
      color: rgba(255,255,255,0.3);
      opacity: 1;
      transform: none;
      animation: color 5s ease infinite 3s;
    }
  }
}

.h-100-border {
  margin-top: 100vh;
}

@keyframes color {
  0%{
    color: rgba(255,255,255,1);
  }
  20%{
    color: rgba(255,255,255,0.3);
  }
  100%{
    color: rgba(255,255,255,0.3);
  }
}